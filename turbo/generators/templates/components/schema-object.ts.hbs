
{{! schema.ts.hbs }}
import { defineType, defineField } from 'sanity'

export const {{camelCase name}}Schema = defineType({
  name: '{{kebabCase name}}',
  title: '{{title}}',
  type: 'object',
  fields: [
    defineField({
      name: 'heading',
      title: 'Heading',
      type: 'string',
      validation: Rule => Rule.required(),
    }),
    defineField({
      name: 'subheading',
      title: 'Subheading',
      type: 'text',
    }),
    {{#if hasImage}}
    defineField({
      name: 'image',
      title: 'Image',
      type: 'image',
      options: {
        hotspot: true,
      },
    }),
    {{/if}}
  ],
  preview: {
    select: {
      title: 'heading',
      subtitle: 'subheading',
    },
  },
})