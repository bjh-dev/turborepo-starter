{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		}
	},
	"globalDependencies": ["package.json", "bun.lock"],
	"globalEnv": ["NODE_ENV"]
}
