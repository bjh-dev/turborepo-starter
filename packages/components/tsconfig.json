{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": [
		"node_modules", 
		"dist", 
		"**/*.test.ts", 
		"**/*.test.tsx", 
		"**/*.stories.tsx", 
		"vitest.config.ts", 
		"vitest.setup.ts",
		"**/vitest.setup.ts",
		"**/vitest.config.ts"
	]
}
