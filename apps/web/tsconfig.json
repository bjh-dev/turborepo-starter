{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.stories.tsx",
		"**/vitest.config.ts",
		"**/vitest.setup.ts"
	]
}
